@inherits LayoutComponentBase

<MudThemeProvider/>
<MudSnackbarProvider/>
<MudDialogProvider/>
<PageTitle>Northwind.Blazor</PageTitle>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Northwind</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pa-2" MaxWidth="MaxWidth.ExtraLarge">
            <ErrorBoundary>
                <ErrorContent>
                    <MudAlert Severity="Severity.Error" Variant="Variant.Filled">An error occured while processing the request.</MudAlert>
                </ErrorContent>
                <ChildContent>
                    @Body
                </ChildContent>
            </ErrorBoundary>
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}