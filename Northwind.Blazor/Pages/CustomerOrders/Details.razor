@page "/customerorders/create"
@inherits PageBase

<MudToolBar>
    <MudText><b>Customer Order</b></MudText>
</MudToolBar>
<MudDivider DividerType="DividerType.FullWidth" Light="true" />
<MudGrid Class="pt-3" Spacing="3">
    <MudItem sm="12" md="6" lg="6">
        <MudGrid>
            <MudItem xs="12" sm="12" md="12" lg="12">
                <MudPaper Elevation="1" Square="true">
                    <MudToolBar>
                        <MudText>Order # <b>1</b></MudText>
                        <MudSpacer />
                        <MudButton Color="Color.Primary" Variant="Variant.Filled" Size="Size.Small" Class="mr-1">Save</MudButton>                        
                    </MudToolBar>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="12" md="12" lg="12">
                <MudTextField T="string" Label="Customer"></MudTextField>
            </MudItem>
            <MudItem md="4" lg="4">
                <MudDatePicker Label="Order Date" />
            </MudItem>
            <MudItem md="4" lg="4">
                <MudDatePicker Label="Due Date" />
            </MudItem>
            <MudItem md="4" lg="4">
                <MudDatePicker Label="Shipped Date" />
            </MudItem>
            <MudItem md="6" lg="6">
                <MudTextField T="string" Label="Shipper"></MudTextField>
            </MudItem>
            <MudItem md="6" lg="6">
                <MudTextField T="string" Label="Ship To"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="12" md="12" lg="12">
                <MudTextField T="string" Label="Notes" Lines="3"></MudTextField>
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem sm="12" md="6" lg="6">

    </MudItem>
</MudGrid>
